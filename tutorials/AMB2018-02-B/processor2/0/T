FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    bottom
    {
        type            zeroGradient;
    }
    top
    {
        type            mixedTemperature;
        h               10;
        emissivity      0.4;
        Tinf            uniform 300;
        value           uniform 300;
    }
    sides
    {
        type            zeroGradient;
    }
    procBoundary2to1
    {
        type            processor;
        value           uniform 300;
    }
    procBoundary2to3
    {
        type            processor;
        value           uniform 300;
    }
}


